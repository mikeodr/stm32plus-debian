#!/usr/bin/make -f

SCONS=scons
INSTALLDIR=$$(pwd)/debian/tmp/usr/arm-none-eabi

%:
	dh $@

override_dh_auto_build:
	$(SCONS) mode=small mcu=f4 hse=25000000 -j4 INSTALLDIR=$(INSTALLDIR)

override_dh_auto_clean:
	dh_auto_clean
	$(SCONS) mode=small mcu=f4 hse=25000000 -j4 INSTALLDIR=$(INSTALLDIR) -c

override_dh_auto_install:
	$(SCONS) mode=small mcu=f4 hse=25000000 -j4 INSTALLDIR=$(INSTALLDIR) install
